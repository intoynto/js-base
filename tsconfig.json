{
    "compilerOptions": {
        "target": "ES2015",
        "module": "ESNext",
        "lib": ["ES2015","DOM"],
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "declaration": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "./dist",
        "declarationDir": "types",
        "removeComments": false,
    },
    "include": [
        "./src/**/*"
    ]
}